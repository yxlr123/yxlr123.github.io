&lt;blockquote&gt;
&lt;p&gt;第二种方法&lt;&#x2F;p&gt;
&lt;&#x2F;blockquote&gt;
&lt;pre data-lang=&quot;md&quot; style=&quot;background-color:#0f1419;color:#bfbab0;&quot; class=&quot;language-md &quot;&gt;&lt;code class=&quot;language-md&quot; data-lang=&quot;md&quot;&gt;&lt;span style=&quot;color:#ffb454;&quot;&gt;![&lt;&#x2F;span&gt;&lt;span&gt;百度&lt;&#x2F;span&gt;&lt;span style=&quot;color:#ffb454;&quot;&gt;]&lt;&#x2F;span&gt;&lt;span&gt;[&lt;&#x2F;span&gt;&lt;span style=&quot;color:#f29718;&quot;&gt;1&lt;&#x2F;span&gt;&lt;span&gt;]
